@model Memberships.Models.ProductItemRow

<div class="row product-item">
    <div class="col-sm-2">
        <img src="@Model.ImageUrl" width="140" />
    </div>
    <div class="col-sm-10 text-color line-bottom min-heigth">
        @if (!Model.IsAvailable)
        {
            <p>Will be released: @Model.ReleaseDate.Value.ToShortDateString()</p>
        }
        <h2>
            @if (Model.IsAvailable)
            {
                if (Model.IsDownloadable)
                {
                    <a href="@Model.Link" target="_blank">
                        @Model.Title
                    </a>
                }
                else
                {
                    <a href="@Model.Link">
                        @Model.Title
                    </a>
                }
            }
            else
            {
                @Model.Title
            }
        </h2>
        <p>@Model.Description</p>
    </div>
</div>
<br/>