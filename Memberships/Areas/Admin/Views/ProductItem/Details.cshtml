@using Memberships.Areas.Admin.Models
@model Memberships.Areas.Admin.Models.ProductItemViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>ProductItem</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.ItemTitle)</dt>
        <dd>@Html.DisplayFor(m => m.ItemTitle)</dd>
        <dt>@Html.DisplayNameFor(m => m.ProductTitle)</dt>
        <dd>@Html.DisplayFor(m => m.ProductTitle)</dd>
    </dl>
</div>
<p>
    @{
        var button = new ButtonModel();
        button.AddOrUpdateParameter(nameof(Model.ItemId), Model.ItemId);
        button.AddOrUpdateParameter(nameof(Model.ProductId), Model.ProductId);
    }
    @Html.Partial("_EditButtonPartial", button)
    @Html.Partial("_BackToListButtonPartial")
</p>
