@using Memberships.Areas.Admin.Models
@model SubscriptionProductViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>ProductItem</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.SubscriptionTitle)</dt>
        <dd>@Html.DisplayFor(m => m.SubscriptionTitle)</dd>
        <dt>@Html.DisplayNameFor(m => m.ProductTitle)</dt>
        <dd>@Html.DisplayFor(m => m.ProductTitle)</dd>
    </dl>
</div>
<p>
    @{
        var button = new ButtonModel();
        button.AddOrUpdateParameter(nameof(Model.SubscriptionId), Model.SubscriptionId.ToString());
        button.AddOrUpdateParameter(nameof(Model.ProductId), Model.ProductId.ToString());
    }
    @Html.Partial("_EditButtonPartial", button)
    @Html.Partial("_BackToListButtonPartial")
</p>